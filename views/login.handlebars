<div class="container">
  <div class="row justify-space-between-md">
    <div class="login-card">
      <h2 class="page-title">Login Page</h2>
      <form class="form login-form">
        <div class="form-group">
          <label for="username-login">Username</label>
          <input class="form-input" type="text" id="username-login" />
        </div>
        <div class="form-group">
          <label for="password-login">Password:</label>
          <input class="form-input" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary login-btn" type="submit">Login</button>
          <a href="/signup">Click here to signup</a>
        </div>
      </form>
    </div>

  </div>
</div>

<script src="/js/login.js"></script>